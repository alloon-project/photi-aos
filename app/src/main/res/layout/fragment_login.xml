<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.LoginFragment"
    style="@style/Theme.Alloonaos">

    <include
        layout="@layout/actionbar_login"
        />

    <EditText
        android:id="@+id/login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_line_default"
        android:enabled="false"
        android:ems="10"
        android:inputType="text"
        android:hint="아이디를 입력해주세요."
        android:textColorHint="@color/gray400"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/no_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/close"
        android:drawablePadding="6dp"
        android:text="아이디 또는 비밀번호가 일치하지 않아요"
        android:visibility="invisible"
        android:textColor="@color/red400"
        android:textSize="9dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="152dp"
        app:layout_constraintStart_toStartOf="@+id/login_id"
        app:layout_constraintTop_toBottomOf="@+id/login_id"/>

    <EditText
        android:id="@+id/login_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="178dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/input_line_default"
        android:drawableEnd="@drawable/eye_off"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="비밀번호를 입력해주세요."
        android:textColorHint="@color/gray400"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/no_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/close"
        android:drawablePadding="6dp"
        android:text="아이디 또는 비밀번호가 일치하지 않아요"
        android:textColor="@color/red400"
        android:textSize="9dp"
        android:visibility="invisible"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="234dp"
        app:layout_constraintStart_toStartOf="@+id/login_id"
        app:layout_constraintTop_toBottomOf="@+id/login_id"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimary"
        android:text="로그인"
        android:theme="@style/Theme.xlarge_round"
        android:layout_marginTop="284dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textAppearance="@style/Theme.text_small"
        android:layout_marginTop="364dp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="193dp"/>

    <Button
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@drawable/divider"
        android:layout_marginTop="366dp"
        android:layout_marginLeft="175dp"
        android:stateListAnimator="@null"/>

    <TextView
        android:id="@+id/find_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textAppearance="@style/Theme.text_small"
        android:layout_marginTop="364dp"
        android:layout_marginLeft="199dp"
        android:layout_marginRight="97dp" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_xlarge_green_line"
        android:text="회원가입"
        android:theme="@style/Theme.green_text"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" />

</FrameLayout>