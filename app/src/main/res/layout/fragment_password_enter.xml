<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.auth.PasswordEnterFragment" />
        <variable
            name="viewModel"
            type="com.example.alloon_aos.viewmodel.AuthViewModel" />
    </data>

    <LinearLayout
        style="@style/Theme.Alloonaos"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/enterCode_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/findpwd"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="24dp"
                android:textSize="18sp"
                android:fontFamily="@font/suit_medium"
                android:textColor="@color/gray900"
                android:letterSpacing="-0.03"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일 : "
                    android:fontFamily="@font/suit_medium"
                    android:textSize="12sp"
                    android:textColor="@color/gray700"
                    android:letterSpacing="-0.03"
                    />
                <TextView
                    android:id="@+id/userEmail_textView"
                    android:text="@={viewModel.email}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/gray700"
                    android:letterSpacing="-0.03"
                    android:paddingRight="16px"
                    />
                <TextView
                    android:id="@+id/resend_textView"
                    android:onClick="@{() -> viewModel.sendNewPassword() }"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resend"
                    android:fontFamily="@font/suit_medium"
                    android:textSize="12sp"
                    android:textColor="@color/green400"
                    android:letterSpacing="-0.03" />
            </LinearLayout>

            <EditText
                android:id="@+id/newPassword_editText"
                android:layout_width="312dp"
                android:layout_height="46dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/input_line_default"
                android:ems="10"
                android:hint="@string/temporarypassword"
                android:fontFamily="@font/suit_medium"
                android:letterSpacing="-0.03"
                android:text="@={viewModel.password}"
                android:textColorHint="@color/gray400"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/error_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enterpwd"
                android:fontFamily="@font/suit_medium"
                android:layout_marginTop="5dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:textSize="12sp"
                android:textColor="@color/red400"
                android:visibility="gone"
                 />
        </LinearLayout>
        <Button
            android:id="@+id/next_button"
            android:onClick="@{() -> viewModel.login() }"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/btn_color_green"
            android:text="다음"
            android:theme="@style/Theme.xlarge_round"
            android:enabled="false" />
    </LinearLayout>

</layout>