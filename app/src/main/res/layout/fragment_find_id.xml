<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.FindIdFragment" />
        <variable
            name="viewModel"
            type="com.example.alloon_aos.viewmodel.MainViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        style="@style/Theme.Alloonaos"
        android:orientation="vertical"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:text="가입 시 사용했던 \n이메일을 입력해주세요"
            android:textSize="18sp"
            android:textColor="@color/gray900"
            android:fontFamily="@font/suit_bold"
            android:letterSpacing="-0.03"/>

        <EditText
            android:id="@+id/email_editText"
            android:text="@={viewModel.email}"
            android:layout_width="295dp"
            android:layout_height="46dp"
            android:background="@drawable/input_line_default"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/error_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailerror1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:textSize="12sp"
            android:textColor="@color/red400"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/nextButton"
            android:onClick="@{() ->viewModel.checkSignedUp()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="394dp"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/btn_color_green"
            android:enabled="false"
            android:text="다음"
            android:theme="@style/Theme.xlarge_round" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>