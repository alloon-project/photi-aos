<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.auth.ChangePasswordFragment" />
        <variable
            name="viewModel"
            type="com.example.alloon_aos.viewmodel.AuthViewModel" />
    </data>

    <LinearLayout
        style="@style/Theme.Alloonaos"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enternewpwd"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"
            android:textColor="@color/gray900"
            android:letterSpacing="-0.03"
            />
        <EditText
            android:id="@+id/newPassword_editText"
            android:layout_width="312dp"
            android:layout_height="46dp"
            android:hint="@string/newPw"
            android:textColorHint="@color/gray400"
            android:background="@drawable/input_line_default"
            android:ems="10"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:textSize="14sp"
            android:letterSpacing="-0.03"/>
        <Button
            android:id="@+id/nextButton"
            android:onClick="@{() ->fragment.goLogin()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="435dp"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/btn_color_green"
            android:enabled="false"
            android:text="다음"
            android:theme="@style/Theme.xlarge_round" />

    </LinearLayout>

</layout>