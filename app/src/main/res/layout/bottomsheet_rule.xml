<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_list"
    android:theme="@style/Theme.Photi"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suit_bold"
        android:letterSpacing="-0.03"
        android:text="@string/createrule2"
        android:textColor="@color/gray900"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close_circle_gray100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_textview" />

    <EditText
        android:id="@+id/rule_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_line_default"
        android:ems="10"
        android:maxLength="30"
        android:fontFamily="@font/suit_medium"
        android:hint="@string/createrule3"
        android:inputType="text"
        android:textColorHint="@color/gray400"
        android:textSize="14dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/title_textview" />

    <TextView
        android:id="@+id/num_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suit_medium"
        android:text="0/30"
        android:textColor="@color/gray400"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/rule_edittext"
        app:layout_constraintTop_toBottomOf="@+id/rule_edittext" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round_primary"
        android:enabled="false"
        android:text="추가하기"
        android:theme="@style/Theme.xlarge_round"
        android:layout_marginTop="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>