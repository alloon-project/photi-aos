<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.auth.SignUpFragment" />
        <variable
            name="viewModel"
            type="com.example.alloon_aos.viewmodel.AuthViewModel" />
    </data>
    <LinearLayout
        style="@style/Theme.Alloonaos"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hello Sing Up"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/clickbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_xlarge_green_line"
                android:text="@={viewModel.hello}"
                android:inputType="text"
                android:ems="10"
                android:textSize="14dp"
                android:layout_marginTop="200dp"/>

            <Button
                android:id="@+id/click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorPrimary"
                android:text="click"
                android:theme="@style/Theme.xlarge_round"
                android:layout_marginTop="284dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>

        </FrameLayout>
    </LinearLayout>
</layout>