<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.join.JoinChallengeFragment" />
        <variable
            name="viewModel"
            type="com.example.alloon_aos.viewmodel.JoinViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/Theme.Photi">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suit_bold"
                    android:letterSpacing="-0.03"
                    android:text="title"
                    android:textColor="@color/gray900"
                    android:textSize="22dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hash_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/card_time"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/suit_bold"
                        android:letterSpacing="-0.03"
                        android:text="인증 시간"
                        android:textColor="@color/gray700"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/suit_semibold"
                        android:letterSpacing="-0.03"
                        android:text="14:00"
                        android:textColor="@color/gray800"
                        android:textSize="14dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_shape3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/line_user_photo"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user" />

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/line_user_photo"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user" />

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="36dp"
                                android:background="@drawable/line_user_photo"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/membernum_textview"
                            android:layout_width="28dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/suit_medium"
                            android:letterSpacing="-0.03"
                            android:text="n명"
                            android:textColor="@color/gray200"
                            android:textSize="12dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="13dp"
                            android:fontFamily="@font/suit_medium"
                            android:letterSpacing="-0.03"
                            android:text="합류"
                            android:textColor="@color/gray200"
                            android:textSize="12dp"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/join_btn"
            app:layout_constraintTop_toBottomOf="@+id/top_layout">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@drawable/card_info"
                android:orientation="vertical"
                android:layout_weight="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suit_bold"
                    android:letterSpacing="-0.03"
                    android:text="목표"
                    android:textColor="@color/blue400"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/goal_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/suit_semibold"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="4sp"
                    android:text="하루에 한번씩 꼭 독서를 하는 것이 우리 챌린지의 목표입니다."
                    android:textColor="@color/gray800"
                    android:textSize="14dp"
                    android:translationY="-1.76sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_weight="5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="233dp"
                    android:layout_weight="1"
                    android:background="@drawable/card_rule_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/suit_bold"
                        android:letterSpacing="-0.03"
                        android:text="인증 룰"
                        android:textColor="@color/green500"
                        android:textSize="12dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rule_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/suit_semibold"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="매일 한 페이지라도 찍어서 올리기"
                        android:textColor="@color/gray800"
                        android:textSize="14dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:src="@drawable/divider_dash_line"
                        android:layerType="software"
                        android:layout_marginTop="16dp"
                        app:tint="@color/green200"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rule_textview" />

                    <TextView
                        android:id="@+id/rule2_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/suit_semibold"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="일주일에 1회 아니고 2회 아니고 3회 이상 인증하기"
                        android:textColor="@color/gray800"
                        android:textSize="14dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider" />

                    <Button
                        android:id="@+id/all_button"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_round_line_secondary"
                        android:fontFamily="@font/suit_bold"
                        android:text="@string/seeall"
                        android:textColor="@color/green500"
                        android:theme="@style/Theme.xsmall_round"
                        android:stateListAnimator="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_date">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/suit_bold"
                        android:letterSpacing="-0.03"
                        android:text="종료 날짜"
                        android:textColor="@color/orange500"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/suit_semibold"
                        android:letterSpacing="-0.03"
                        android:text="~2025. 01. 01"
                        android:textColor="@color/gray800"
                        android:textSize="14dp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/join_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round_primary"
            android:text="@string/join"
            android:theme="@style/Theme.xlarge_round"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>