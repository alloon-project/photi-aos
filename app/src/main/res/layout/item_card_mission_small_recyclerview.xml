<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLayout"
    android:theme="@style/Theme.Photi"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_shape"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_shape"
    >

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:breakStrategy="simple"
        android:fontFamily="@font/suit_semibold"
        android:letterSpacing="-0.03"
        android:text="타이틀"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/date_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:id="@+id/date_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suit_bold"
        android:letterSpacing="-0.025"
        android:lineHeight="19dp"
        android:text="종료일"
        android:textColor="#99FFFFFF"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="16dp"/>

    <HorizontalScrollView
        android:id="@+id/chipScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:paddingStart="0dp"
        android:paddingEnd="14dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/chip1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="27dp"
                android:background="@drawable/chip_white"
                android:fontFamily="@font/suit_medium"
                android:minWidth="41dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:stateListAnimator="@null"
                android:text="전체"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="14dp"
                />

            <Button
                android:id="@+id/chip2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="27dp"
                android:background="@drawable/chip_white"
                android:fontFamily="@font/suit_medium"
                android:minWidth="41dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:stateListAnimator="@null"
                android:text="전체"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/chip1_btn"
                app:layout_constraintTop_toTopOf="@+id/chip1_btn"
                android:layout_marginLeft="8dp"/>

            <Button
                android:id="@+id/chip3_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="27dp"
                android:background="@drawable/chip_white"
                android:fontFamily="@font/suit_medium"
                android:minWidth="41dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:stateListAnimator="@null"
                android:text="전체"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/chip2_btn"
                app:layout_constraintTop_toTopOf="@+id/chip2_btn"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>