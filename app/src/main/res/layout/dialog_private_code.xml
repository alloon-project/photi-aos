<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="227dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/dialog_radius"
    android:theme="@style/Theme.Photi">

    <TextView
        android:id="@+id/code_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/suit_semibold"
        android:letterSpacing="-0.03"
        android:text="@string/invitecode"
        android:textColor="@color/gray900"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/code_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_popup_default"
        android:ems="10"
        android:fontFamily="@font/suit_medium"
        android:hint="5글자"
        android:maxLength="5"
        android:gravity="center"
        android:inputType="text"
        android:textColorHint="@color/gray500"
        android:textSize="14dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/code_textview"/>

    <ImageButton
        android:id="@+id/code_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:stateListAnimator="@null"
        android:theme="@style/Theme.btn_lock_closed_icon"
        android:background="@drawable/btn_icon_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_edittext" />

</androidx.constraintlayout.widget.ConstraintLayout>