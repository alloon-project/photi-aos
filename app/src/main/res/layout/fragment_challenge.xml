<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.photi.ChallengeFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/Theme.Photi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_default"
                    android:fontFamily="@font/suit_medium"
                    android:hint="챌린지, 해시태그를 검색해보세요"
                    android:textColorHint="@color/gray500"
                    android:textSize="14dp"
                    android:ems="10"/>

                <ImageButton
                    android:id="@+id/search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/ic_search" />
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicatorColor="@color/blue500"
                app:tabIndicatorHeight="2dp"
                app:tabIndicatorFullWidth="false"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@color/gray400"
                app:tabSelectedTextColor="@color/blue500">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천순"
                    android:textSize="14dp"
                    android:textColor="@color/blue400"
                    android:fontFamily="@font/suit_bold" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최신순"
                    android:textSize="14dp"
                    android:fontFamily="@font/suit_bold"/>

            </com.google.android.material.tabs.TabLayout>

            <View
                android:id="@+id/line_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/tab_line"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout"
                />

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_view"/>

            <ImageButton
                android:layout_width="53dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:theme="@style/Theme.icon_xlarge_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>