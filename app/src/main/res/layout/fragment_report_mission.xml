<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.report.ReportMissionFragment" />
    </data>

    <LinearLayout
        style="@style/Theme.Alloonaos"
        android:orientation="vertical"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미션을 신고하는 이유가 무엇인가요?"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:letterSpacing = "-0.03"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"/>

            <RadioGroup
                android:id="@+id/report_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_marginLeft="24dp">
                <RadioButton
                    android:layout_width="316dp"
                    android:layout_height="32dp"
                    android:textSize="14dp"
                    android:paddingLeft="7dp"
                    android:button="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:text="중복 / 도배성 미션" />
                <RadioButton
                    android:layout_width="316dp"
                    android:layout_height="32dp"
                    android:textSize="14dp"
                    android:paddingLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:text="음란성 / 선정적인 미션" />
                <RadioButton
                    android:layout_width="316dp"
                    android:layout_height="32dp"
                    android:textSize="14dp"
                    android:paddingLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:text="욕설 / 혐오 발언 미션" />
                <RadioButton
                    android:layout_width="316dp"
                    android:layout_height="32dp"
                    android:textSize="14dp"
                    android:paddingLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:text="폭력적 / 위험한 미션" />
                <RadioButton
                    android:layout_width="316dp"
                    android:layout_height="32dp"
                    android:textSize="14dp"
                    android:paddingLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:text="상업적 홍보 / 광고 미션" />
                <RadioButton
                    android:layout_width="316dp"
                    android:layout_height="32dp"
                    android:textSize="14dp"
                    android:paddingLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:text="타인을 비방하는 미션" />
                <RadioButton
                    android:id="@+id/write_radio"
                    android:layout_width="316dp"
                    android:layout_height="32dp"
                    android:textSize="14dp"
                    android:paddingLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_radio_button"
                    android:textColor="@drawable/selector_radio_text"
                    android:text="직접 작성" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자세한 내용을 적어주시면 신고에 도움이 돼요"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:letterSpacing = "-0.03"
                    android:layout_marginTop="373dp"
                    android:layout_marginLeft="24dp"/>

                <EditText
                    android:id="@+id/report_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textarea_line_default"
                    android:gravity="top"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="신고 내용을 상세히 알려주세요"
                    android:textColorHint="@color/gray400"
                    android:textSize="14dp"
                    android:layout_marginTop="410dp"
                    android:layout_marginLeft="24dp" />

                <TextView
                    android:id="@+id/num_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="529dp"
                    android:layout_marginRight="24dp"
                    android:layout_gravity="right"
                    android:text="0/120"
                    android:textSize="12dp"
                    android:textColor="@color/gray400" />
            </LinearLayout>

            <Button
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorPrimary"
                android:theme="@style/Theme.xlarge_round"
                android:text="신고하기"
                android:layout_marginTop="564dp"
                android:layout_marginLeft="24dp"
                android:onClick="@{() ->fragment.click()}"/>

        </FrameLayout>
    </LinearLayout>
</layout>
