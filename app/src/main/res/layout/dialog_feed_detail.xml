<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.alloon_aos.viewmodel.FeedViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E232666">

    <ImageButton
        android:id="@+id/back_imgBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@null"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/ellipsis_imgBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@null"
        android:src="@drawable/ic_ellipsis"
        android:layout_marginRight="17dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="69dp"
        android:layout_marginHorizontal="24dp">

        <ImageView
            android:id="@+id/feed_imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius_16"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_avatar_part"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_medium"
            android:text="아이디"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <Button
            android:id="@+id/button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/btn_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/heartCnt_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="1"
            android:textColor="@color/gray200"
            android:textSize="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <EditText
            android:id="@+id/comment_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_blur_primary"
            app:layout_constraintBottom_toBottomOf="@+id/feed_imgView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="33dp"
            android:layout_marginHorizontal="18dp"
            android:drawableStart="@drawable/ic_write"
            android:drawablePadding="10dp"
            android:drawableTint="@color/gray400"
            android:hint="한 줄 댓글을 남겨보세요"
            android:textColorHint="@color/gray300"
            android:textColor="@color/white"
            android:fontFamily="@font/suit_medium"
            android:textSize="14dp"
            android:maxLength="16"/>

        <TextView
            android:id="@+id/textLength_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_medium"
            android:text="0/16"
            android:textColor="@color/gray600"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/comment_editText"
            app:layout_constraintTop_toBottomOf="@+id/comment_editText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>