<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.photi.ChallengeCommendFragment" />
    </data>
    <LinearLayout
        style="@style/Theme.Alloonaos"
        android:layout_height="520dp"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지금 인기있는 챌린지"
                    android:textSize="18dp"
                    android:drawableStart="@drawable/ic_flame"
                    android:drawablePadding="6dp"
                    android:textColor="@color/gray900"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="32dp"
                    />
                <FrameLayout
                    android:id="@+id/here_seul"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="76dp">

                </FrameLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="327dp"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="316dp"
                    android:background="@drawable/ic_divider_large"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="해시태그별 모아보기"
                    android:textSize="18dp"
                    android:drawableStart="@drawable/ic_pricetag"
                    android:drawablePadding="6dp"
                    android:textColor="@color/gray900"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="348dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="17dp"
                    android:layout_marginTop="372dp">
                    <Button
                        android:layout_width="49dp"
                        android:layout_height="30dp"
                        android:background="@drawable/chip_pink"
                        android:textSize="14dp"
                        android:text="전체"
                        android:textColor="@color/pink400"
                        android:stateListAnimator="@null"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_divider_chip"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="49dp"
                            android:layout_height="30dp"
                            android:background="@drawable/chip_gray"
                            android:textSize="14dp"
                            android:text="러닝"
                            android:textColor="@color/gray800"
                            android:layout_marginRight="8dp"
                            android:stateListAnimator="@null"/>
                        <Button
                            android:layout_width="49dp"
                            android:layout_height="30dp"
                            android:background="@drawable/chip_gray"
                            android:textSize="14dp"
                            android:text="취뽀"
                            android:textColor="@color/gray800"
                            android:layout_marginRight="8dp"
                            android:stateListAnimator="@null"/>
                        <Button
                            android:layout_width="49dp"
                            android:layout_height="30dp"
                            android:background="@drawable/chip_gray"
                            android:textSize="14dp"
                            android:text="독서"
                            android:textColor="@color/gray800"
                            android:layout_marginRight="8dp"
                            android:stateListAnimator="@null"/>
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/here_seul2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="436dp">

                </FrameLayout>

                <TextView
                    android:id="@+id/you_can_delete_This"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello scroll"
                    android:layout_marginTop="800dp"/>
            </FrameLayout>
        </ScrollView>
    </LinearLayout>
</layout>