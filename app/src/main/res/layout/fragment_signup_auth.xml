<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fragment"
            type="com.example.alloon_aos.view.fragment.auth.SignupAuthFragment" />
        <variable
            name="viewModel"
            type="com.example.alloon_aos.viewmodel.AuthViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:theme="@style/Theme.Photi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/auth_progress"
                android:max="100"
                android:layout_width="312dp"
                android:layout_height="6dp"
                android:progressDrawable="@drawable/signup_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_semibold"
            android:text="@string/signupauth"
            android:textColor="@color/gray900"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/auth_progress"
            app:layout_constraintEnd_toEndOf="parent"/>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@id/textView5"
                app:layout_constraintTop_toBottomOf="@id/textView5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일 :"
                    android:fontFamily="@font/suit_semibold"
                    android:textSize="12dp"
                    android:textColor="@color/gray700"/>

                <TextView
                    android:id="@+id/email_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.email}"
                    android:textSize="12dp"
                    android:fontFamily="@font/suit_semibold"
                    android:textColor="@color/gray700"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="1dp"/>

                <Button
                    android:id="@+id/resend_btn"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:textColor="@color/blue400"
                    style="@style/Theme.text_xsmall"
                    android:background="#00ff0000"
                    android:text="@string/resend"
                    android:fontFamily="@font/suit_medium"
                    android:layout_marginLeft="160dp"/>
            </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/auth_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_line_default"
                android:ems="10"
                android:fontFamily="@font/suit_medium"
                android:hint="숫자 4자리"
                android:inputType="text"
                android:text="@={viewModel.email_code}"
                android:textColorHint="@color/gray400"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/auth_error_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_error"
                android:drawablePadding="6dp"
                android:text="@string/autherror"
                android:visibility="invisible"
                android:textColor="@color/red400"
                android:textSize="12dp"
                android:fontFamily="@font/suit_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:text="다음"
            android:theme="@style/Theme.xlarge_round"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>