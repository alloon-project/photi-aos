<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.LoginFragment"
        android:label=" "
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_loginFragment_to_findIdFragment"
            app:destination="@id/findIdFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_loginFragment_to_findPasswordFragment"
            app:destination="@id/findPasswordFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_loginFragment_to_signupEmailFragment"
            app:destination="@id/signupEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.SignUpFragment"
        android:label=" "
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/findIdFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.FindIdFragment"
        android:label=" "
        tools:layout="@layout/fragment_find_id">
        <action
            android:id="@+id/action_findIdFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/findPasswordFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.FindPasswordFragment"
        android:label=" "
        tools:layout="@layout/fragment_find_password">
        <action
            android:id="@+id/action_findPasswordFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.ChangePasswordFragment"
        android:label=" "
        tools:layout="@layout/fragment_change_password">
        <action
            android:id="@+id/action_changePasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/signupAuthFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.SignupAuthFragment"
        android:label=" "
        tools:layout="@layout/fragment_signup_auth">
        <action
            android:id="@+id/action_signupAuthFragment_to_signupIdFragment"
            app:destination="@id/signupIdFragment" />
        <argument
            android:name="userdata"
            app:argType="com.example.alloon_aos.data.model.UserData" />
    </fragment>
    <fragment
        android:id="@+id/signupIdFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.SignupIdFragment"
        android:label=" "
        tools:layout="@layout/fragment_signup_id">
        <action
            android:id="@+id/action_signupIdFragment_to_signupPwFragment"
            app:destination="@id/signupPwFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupEmailFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.SignupEmailFragment"
        android:label=" "
        tools:layout="@layout/fragment_signup_email">
        <action
            android:id="@+id/action_signupEmailFragment_to_signupAuthFragment"
            app:destination="@id/signupAuthFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupPwFragment"
        android:name="com.example.alloon_aos.view.fragment.auth.SignupPwFragment"
        android:label=" "
        tools:layout="@layout/fragment_signup_pw">
        <action
            android:id="@+id/action_signupPwFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>