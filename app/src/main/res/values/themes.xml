<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Photi" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:stateListAnimator">"@null"</item>
    </style>

    <style name="Theme.Photi" parent="Base.Theme.Photi">
        <item name="colorPrimary">@color/btn_color_blue</item>
        <item name="colorSecondary">@color/btn_color_green</item>
        <item name="colorTertiary">@color/btn_color_orange</item>
    </style>

    <style name="Theme.Translucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- ////////////////////// Round Button ////////////////////////// -->
    <!-- round button -->
    <style name="Theme.round_btn" parent="Theme.Photi">
        <item name="android:textColor">@color/white</item>
        <item name ="android:fontFamily">@font/suit_bold</item>
    </style>
    <style name="Theme.xlarge_round" parent="Theme.round_btn">
        <item name="android:width">312dp</item>
        <item name="android:height">56dp</item>
        <item name="btnCornerRadius">16dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="Theme.large_round" parent="Theme.round_btn" >
        <item name="android:width">264dp</item>
        <item name="android:height">56dp</item>
        <item name="btnCornerRadius">16dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="Theme.medium_round" parent="Theme.round_btn" >
        <item name="android:width">141dp</item>
        <item name="android:height">52dp</item>
        <item name="btnCornerRadius">14dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="Theme.small_round" parent="Theme.round_btn" >
        <item name="android:width">128dp</item>
        <item name="android:height">46dp</item>
        <item name="android:textSize">14dp</item>
        <item name="btnCornerRadius">12dp</item>
    </style>
    <style name="Theme.xsmall_round" parent="Theme.round_btn" >
        <item name="android:width">70dp</item>
        <item name="android:height">34dp</item>
        <item name="android:padding">8dp</item>
        <item name="btnCornerRadius">10dp</item>
        <item name="android:textSize">14dp</item>
    </style>


    <!-- line button-->
    <style name="Theme.btn_round_line_xlarge" parent="Theme.Photi">
        <item name="android:width">327dp</item>
        <item name="android:height">56dp</item>
        <item name="btnCornerRadius">16dp</item>
        <item name="android:textSize">16dp</item>
        <item name ="android:fontFamily">@font/suit_bold</item>
    </style>

    <style name = "Theme.btn_round_line_large" parent="Theme.Photi">
        <item name="android:width">279dp</item>
        <item name="android:height">56dp</item>
        <item name="android:textSize">16dp</item>
        <item name="btnCornerRadius">16dp</item>
        <item name ="android:fontFamily">@font/suit_bold</item>
    </style>

    <style name = "Theme.btn_round_line_medium" parent="Theme.Photi">
        <item name="android:width">136dp</item>
        <item name="android:height">46dp</item>
        <item name="android:textSize">16dp</item>
        <item name ="android:fontFamily">@font/suit_bold</item>
        <item name="btnCornerRadius">14dp</item>
    </style>

    <style name = "Theme.btn_round_line_small" parent="Theme.Photi">
        <item name="android:width">136dp</item>
        <item name="android:height">46dp</item>
        <item name="android:textSize">14dp</item>
        <item name ="android:fontFamily">@font/suit_bold</item>
        <item name="btnCornerRadius">12dp</item>
    </style>

    <style name = "Theme.btn_round_line_xsmall" parent="Theme.Photi">
        <item name="android:width">70dp</item>
        <item name="android:height">34dp</item>
        <item name="android:textSize">14dp</item>
        <item name ="android:fontFamily">@font/suit_bold</item>
        <item name="btnCornerRadius">10dp</item>
    </style>


    <!-- ////////////////////// Icon Button ////////////////////////// -->
    <style name="Theme.btn_plus_icon" parent="Theme.Photi">
        <item name="srcCompat">@drawable/ic_plus</item>
    </style>
    <style name="Theme.btn_lock_closed_icon" parent="Theme.Photi">
        <item name="srcCompat">@drawable/ic_lock_closed</item>
    </style>
    <style name="Theme.btn_lock_open_icon" parent="Theme.Photi">
        <item name="srcCompat">@drawable/ic_lock_open</item>
    </style>



    <!-- ////////////////////// Text Button ////////////////////////// -->
    <style name="Theme.text_btn" parent="Theme.Photi">
        <item name="android:backgroundTint">@color/white</item>
<!--        <item name="android:textColor">@color/gray400</item>-->
<!--        <item name="android:textColor">@color/btn_text</item>-->
    </style>
    <style name="Theme.text_xlarge" parent="Theme.text_btn">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/suit_bold</item>
    </style>
    <style name="Theme.text_large" parent="Theme.text_btn">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/suit_semibold</item>
    </style>
    <style name="Theme.text_medium" parent="Theme.text_btn">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/suit_medium</item>
    </style>
    <style name="Theme.text_small" parent="Theme.text_btn">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/suit_medium</item>
    </style>
    <style name="Theme.text_xsmall" parent="Theme.text_btn">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/suit_medium</item>
    </style>

    <!-- ////////////////////// Card ////////////////////////// -->
    <style name="Theme.round_card" parent="Theme.Photi">
        <item name="android:bottomRightRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:topLeftRadius">8dp</item>
    </style>

    <!-- ////////////////////// Bottom Sheet ////////////////////////// -->
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_list</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>


</resources>