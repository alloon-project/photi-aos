        <item name="android:topLeftRadius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
    </style>

    <!-- line button text color -->
    <style name="Theme.green_text" parent="Theme.Alloonaos">
        <item name="android:textColor">@color/green500</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.green_small_text" parent="Theme.Alloonaos">
        <item name="android:textColor">@color/green500</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Theme.pink_text" parent="Theme.Alloonaos">
        <item name="android:textColor">@color/pink500</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.pink_small_text" parent="Theme.Alloonaos">
        <item name="android:textColor">@color/pink500</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Theme.blue_text" parent="Theme.Alloonaos">
        <item name="android:textColor">@color/blue500</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.blue_small_text" parent="Theme.Alloonaos">
        <item name="android:textColor">@color/green500</item>
        <item name="android:textSize">10sp</item>
    </style>


    <!-- ////////////////////// Icon Button ////////////////////////// -->
    <!-- Priamry Button -->
    <style name="Theme.icon_btn_green" parent="Theme.Alloonaos">
        <item name="backgroundTint">@color/btn_icon_green</item>
        <item name="srcCompat">@drawable/add</item>
    </style>
    <style name="Theme.icon_xlarge_green" parent="Theme.icon_btn_green">
        <item name="android:width">56dp</item>
        <item name="android:height">56dp</item>
        <item name="android:bottomLeftRadius">100dp</item>
        <item name="android:bottomRightRadius">100dp</item>
        <item name="android:topLeftRadius">100dp</item>
        <item name="android:topRightRadius">100dp</item>
    </style>

    <!-- Gray Button -->
    <style name="Theme.icon_btn_gray" parent="Theme.Alloonaos">
        <item name="backgroundTint">@color/btn_icon_gray</item>
        <item name="srcCompat">@drawable/add</item>
        <item name="tint">@color/btn_icon_add_color</item>
    </style>
    <style name="Theme.icon_xlarge_gray" parent="Theme.icon_btn_gray">
        <item name="android:width">56dp</item>
        <item name="android:height">56dp</item>
        <item name="android:bottomLeftRadius">100dp</item>
        <item name="android:bottomRightRadius">100dp</item>
        <item name="android:topLeftRadius">100dp</item>
        <item name="android:topRightRadius">100dp</item>
    </style>


    <!-- ////////////////////// Text Button ////////////////////////// -->
    <style name="Theme.text_btn" parent="Theme.Alloonaos">
        <item name="android:textColor">@color/btn_text</item>
    </style>
    <style name="Theme.text_xlarge" parent="Theme.text_btn">
        <item name="android:height">59dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="Theme.text_small" parent="Theme.text_btn">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:height">25dp</item>
        <item name="android:textSize">9dp</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>