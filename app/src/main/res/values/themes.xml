<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Alloonaos" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:stateListAnimator">"@null"</item>
    </style>

    <style name="Theme.Alloonaos" parent="Base.Theme.Alloonaos">
        <item name="colorPrimary">@color/btn_color_blue</item>
        <item name="colorSecondary">@color/btn_color_green</item>
        <item name="colorTertiary">@color/btn_color_orange</item>
