<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Photi" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:stateListAnimator">"@null"</item>
    </style>

    <style name="Theme.Photi" parent="Base.Theme.Photi">
        <item name="colorPrimary">@color/btn_color_blue</item>
